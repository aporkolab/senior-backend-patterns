# =============================================================================
# SENIOR BACKEND PATTERNS - PRODUCTION CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# =============================================================================

# Domain Configuration
DOMAIN=patterns.yourdomain.com

# Version tag for Docker images
VERSION=1.0.0

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=patterns
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=patternsdb

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_ANOTHER_STRONG_PASSWORD

# =============================================================================
# KAFKA UI
# =============================================================================
KAFKA_UI_USER=admin
KAFKA_UI_PASSWORD=CHANGE_ME_KAFKA_UI_PASSWORD

# =============================================================================
# GRAFANA
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# =============================================================================
# SSL/TLS (Let's Encrypt)
# =============================================================================
LETSENCRYPT_EMAIL=your-email@domain.com

# =============================================================================
# JAVA OPTIONS (optional, defaults shown)
# =============================================================================
# JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC
